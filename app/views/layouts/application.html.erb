<!DOCTYPE html>
<html>
<head>
  <title>SoupExchange</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

 <%= render 'layouts/nav' %> 

<% if signed_in? %>
	<p>Hello <%= current_user.name %></p>
<% else %>
	Not signed in 
<% end %>

<%= debug(params) if Rails.env.development? %>

<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= yield %>

</body>
</html>
